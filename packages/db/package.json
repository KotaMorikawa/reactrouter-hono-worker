{
	"name": "@repo/db",
	"version": "1.0.0",
	"private": true,
	"description": "Database schema and migrations with Drizzle ORM",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"lint": "biome check src/",
		"test": "vitest run",
		"typecheck": "tsc --noEmit",
		"db:generate": "drizzle-kit generate:pg",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:seed": "tsx src/seed.ts"
	},
	"dependencies": {
		"@repo/shared": "workspace:*",
		"drizzle-orm": "^0.29.0",
		"postgres": "^3.4.3"
	},
	"devDependencies": {
		"drizzle-kit": "^0.20.0",
		"tsx": "^4.7.1",
		"typescript": "^5.8.3",
		"vitest": "^1.6.0"
	}
}
