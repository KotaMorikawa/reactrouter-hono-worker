{
	"name": "reactrouter-hono-worker",
	"version": "1.0.0",
	"private": true,
	"description": "Cloudflare Workers monorepo with React Router v7 and Hono",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev --parallel",
		"lint": "turbo lint",
		"test": "turbo test",
		"typecheck": "turbo typecheck",
		"clean": "turbo clean",
		"format": "turbo format",
		"docker:up": "docker-compose up --build",
		"docker:down": "docker-compose down",
		"docker:logs": "docker-compose logs -f",
		"docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.6",
		"turbo": "^2.0.0",
		"typescript": "^5.8.3"
	},
	"packageManager": "npm@10.0.0",
	"engines": {
		"node": ">=18.0.0"
	}
}
