{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "build/**", ".wrangler/**"],
			"inputs": ["src/**", "app/**", "*.ts", "*.tsx", "*.js", "*.jsx", "*.json"]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"inputs": ["src/**", "app/**", "*.ts", "*.tsx", "*.js", "*.jsx", "*.json"]
		},
		"lint": {
			"outputs": [],
			"inputs": ["src/**", "app/**", "*.ts", "*.tsx", "*.js", "*.jsx", "*.json", "*.md"]
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": ["coverage/**"],
			"inputs": ["src/**", "app/**", "test/**", "tests/**", "*.test.*", "*.spec.*"]
		},
		"test:e2e": {
			"dependsOn": ["build"],
			"outputs": ["test-results/**", "playwright-report/**"],
			"inputs": ["src/**", "app/**", "tests/e2e/**", "playwright.config.*", "*.test.*", "*.spec.*"]
		},
		"typecheck": {
			"dependsOn": ["^build"],
			"outputs": [],
			"inputs": ["src/**", "app/**", "*.ts", "*.tsx", "tsconfig.json"]
		},
		"clean": {
			"cache": false,
			"outputs": []
		},
		"format": {
			"outputs": [],
			"inputs": ["src/**", "app/**", "*.ts", "*.tsx", "*.js", "*.jsx", "*.json", "*.md"]
		}
	},
	"globalDependencies": ["package.json", "tsconfig.json", "turbo.json"],
	"ui": "tui"
}
